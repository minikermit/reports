<h1>Editing package</h1>

<% form_for(@package) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :Name %><br />
    <%= f.text_field :Source_Package_Name %>
  </p>
  <p>
    <%= f.label :Description %><br />
    <%= f.text_field :Source_Package_Description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @package %> |
<%= link_to 'Back', packages_path %>
