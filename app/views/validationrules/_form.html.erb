

<% form_for(@validationrule) do |f| %>
  <%= f.error_messages :class => 'error' %>
  
<fieldset class= 'fieldset'>
	<Legend class = 'legend'> Editing validation rule </Legend>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id, :class => 'text'  %>
  </p>
  <p>
    <%= f.label :rule_scope  %><br />
    <%= f.text_field :rule_scope, :class => 'text'  %>
  </p>
   <p>
    <%= f.label :rule_type %><br />
    <%= f.text_field :rule_type, :class => 'text'  %>
  </p>
  <p>
    <%= f.label :rule_id %><br />
    <%= f.text_field :ErrorKind, :class => 'text' %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :rule_description, :size => 200, :class => 'text'  %>
  </p>
  <p>
    <%= f.label :rule_hint %><br />
    <%= f.text_area :rule_hint, :rows => 12, :cols => 40, :class => 'textarea'  %>
  </p>
  <p>
    <%= f.label :rule_sql_query %><br />
    <%= f.text_area :rule_sql_query, :rows => 25, :cols =>40, :class => 'textarea' %>
  </p>


  <p>
    <%= f.submit 'Save' %>
  </p>

</fieldset> 
  
<% end %>