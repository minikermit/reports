<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', :media => "screen", :cache =>  true %>
    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", :media => "screen", :cache =>  true  %>
    <%= stylesheet_link_tag 'flexselect', :media => "screen", :cache =>  true %>
    <%= stylesheet_link_tag 'slide', :media => "screen", :cache =>  true %>
    <!-- Blueprint CSS Start color: green-->
    <!--%= stylesheet_link_tag 'blueprint/screen', :media => "screen,projection"  %-->
    <%= stylesheet_link_tag 'blueprint/print', :media => "print"  %>
    <!-- Blueprint CSS End -->

    <!-- PNG FIX for IE6 -->
  	<!-- http://24ways.org/2007/supersleight-transparent-png-in-ie6 -->
	<!--[if lte IE 6]>
		<script type="text/javascript" src="/javascripts/pngfix/supersleight-min.js"></script>
	<![endif]-->

    <%= yield(:head) %>
  </head>
  <body>

    <!-- Panel -->
    <div id="toppanel">
        <div id="panel">
	        <div class="content clearfix">
			        <div class="left">
				        <h1>Welcome to the Finance department</h1>
				        <h2> </h2>
				        <p class="grey">Please login or register if you don't have any login</p>
			        </div>
			        <div class="left">
				        <!-- Login Form -->
				        <form class="clearfix" action="#" method="post">
					        <h1>Member Login</h1>
					        <label class="grey" for="login">Username:</label>
					        <input class="field" type="text" name="login" id="login" value="" size="23" />
					        <label class="grey" for="password">Password:</label>
					        <input class="field" type="password" name="password" id="password" size="23" />
	            	        <label><input name="rememberme" id="rememberme" type="checkbox" checked="checked" value="forever" /> &nbsp;Remember me</label>
        			        <div class="clear"></div>
					        <input type="submit" name="submit" value="Login" class="bt_login" />
					        <a class="lost-pwd" href="#">Lost your password?</a>
				        </form>
			        </div>
			        <div class="left right">
				        <!-- Register Form -->
				        <form action="#" method="post">
					        <h1>Not registered yet? Sign Up!</h1>
					        <label class="grey" for="signup">Username:</label>
					        <input class="field" type="text" name="signup" id="signup" value="" size="23" />
					        <label class="grey" for="email">Email:</label>
					        <input class="field" type="text" name="email" id="email" size="23" />
					        <label>A password will be e-mailed to you.</label>
					        <input type="submit" name="submit" value="Register" class="bt_register" />
				        </form>
			        </div>
		        </div>
        </div> <!-- /login -->

	    <!-- The tab on top -->
	    <div class="tab">
		    <ul class="login">
			    <li class="left">&nbsp;</li>
			    <% if !current_user %>
                    <%= link_to "Register", new_user_path %> |
                    <%= link_to "Login", login_path %>
                 <% end %>
			    <li class="sep"></li>
			    <li id="toggle">
				    <a id="open" class="open" href="#">Log In | Register</a>
				    <a id="close" style="display: none;" class="close" href="#">Close Panel</a>
			    </li>
			    <li class="right">&nbsp;</li>
		    </ul>
	    </div> <!-- / top -->

    </div> <!--panel -->


    <div id="container">

      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%= yield %>
    </div>


    <!-- This is the javascript part -->
    <!--%= javascript_include_tag 'jquery-1.3.2.min', 'jquery.form', 'actions', :cache => true %-->
    <%= javascript_include_tag "jquery-1.4.3.min.js", :cache => true %>
    <%= javascript_include_tag "jquery-ui-1.8.5.custom.min.js", :cache => true %>
    <%= javascript_include_tag  "application", :cache => true %>
    <%= javascript_include_tag  "actions", :cache => true %>
    <%= javascript_include_tag  "flexselect/liquidmetal", :cache => true %>
    <%= javascript_include_tag  "flexselect/jquery.flexselect", :cache => true %>
    <!-- End of javascript part -->

  </body>
</html>