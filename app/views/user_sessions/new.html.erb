<% content_for :article1 do %>

<h1>Login</h1>

    <% form_for @user_session, :url => user_sessions_path do |f| %>
      <%= f.error_messages %>
      <%= f.label :login %><br />
      <%= f.text_field :login %><br />
      <!--%= text_field_tag 'login', :login, default_text("Enter your username")%><br /-->
      <br />
      <%= f.label :password %><br />
      <%= f.password_field :password %><br />
      <br />
      <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
      <br />
      <%= f.submit "Login" %>
    <% end %>

<% end %>